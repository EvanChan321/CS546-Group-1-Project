<main>
    <h1>{{title}}</h1>
    <form action="/shops/search/" method="POST">
        <div id="container">
        <label>
            Search Boba Stores:
        </label>
        
        <input class= "search-bar" type="text" name="shop" id="shop" placeholder= "Kung Fu Tea...">
        <p>Minimum Rating</p>
        <input type="range" value="0" min="0" max="5" name="minRating" id="minRating" oninput="this.nextElementSibling.value = this.value">
        <output>0</output>
        <p>Minimum Likes</p>
        <input type="text" name="minLikes" id="minLikes" placeholder= "0" value="0"><br>
        <br><button type="submit"><img class= "search-button" alt="search-button" src="/public/img/search-icon.png"></button>
        </div>
    </form>
    <br>
    <footer>
        <a href="/shop/addShop" class="static-link">Add Shop</a>
    </footer>
</main>