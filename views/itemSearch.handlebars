<main>
    {{#if search}}
    <h1>Items with description mentioning "{{search}}" at {{shop.name}}</h1>
    {{else}}
    <h1>Items at {{shop.name}}</h1>
    {{/if}}
    <div id="container">
        <label>Search Items:</label>
        <input class="search-bar" type="text" name="search" id="itemSearch" placeholder="Matcha...">
        <br>
        <button type="button" onclick="location.href='/shop/{{shop._id}}/itemSearch/' + encodeURIComponent(document.getElementById('itemSearch').value)">
            <img class="search-button" alt="search-button" src="/public/img/search-icon.png">
        </button>
    </div>
    <select id="reviewSort" name="reviewSort" onchange="itemSort(this.value)">
        <option value='default'>Default</option>
        <option value='cheapest'>By Cheapest</option>
        <option value='expensive'>By Most Expensive</option>
        <option value='highest'>By Highest Calorie Count</option>
        <option value='lowest'>By Lowest Calorie Count</option>
        <option value='atoz'>A - Z</option>
        <option value='ztoa'>Z - A</option>
    </select>
    <table id="default">
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Page Link</th>
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td><a href="/shop/{{../shop._id}}/item/{{this._id}}">Page</a></td>
            </tr>
            {{/each}}
        </tbody>     
    </table>
    <table id="cheapest" hidden>
        <thead>
            <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Page Link</th>
            </tr>
        </thead>
