<main>
    <section class="login">
        <form action="/user/signup{{postTo}}" name="signup-form" id="signup-form" method="POST" class="logSign">
        <h2>Create an account for Boba Fettch</h2>
            <label for="username">Username:</label>
            <input type="text" name="username" id="username" value="{{username}}" required>
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" value="{{password}}" required>  <!-- add confirm password-->
            <label for="password">Confirm Password:</label>
            <input type="password" name="passwordConf" id="passwordConf" value="{{passwordConf}}" required>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" value="{{email}}" required>
            <label for="zipcode">Address:</label>
            <input type="text" name="zipcode" id="zipcode" value="{{zipcode}}" required>
            <button type="submit" name="submitButton" id="submitButton" class="save">Signup!</button>
            {{#if error}}
                <p class="CSerror">{{error}}</p>
            {{/if}}
        </form>
        <p><a href="/user/signup{{link}}">Sign up for a {{type}} account</a></p>
        <p><a href="/user/login">Need to login?</a></p>
        <div id="error" class="CSerror" hidden>Error</div>
    </section>
</main>

