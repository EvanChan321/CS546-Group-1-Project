<main>
    <section class="login">
        <form action="/user/login" method="POST" class="login">
            <label for="login"><h2>Sign in to Boba Fettch</h2></label>
            {{#if error}}
                <p class="error">{{error}}</p>
            {{/if}}
            <input type="text" name="emailOrUsername" id="emailOrUsername" placeholder="Username or Email" value="{{emailOrUsername}}" autocomplete="on" required>
            <br>
            <input type="password" name="password" id="password" placeholder="Password" autocomplete="on" required>
            <br>
            <button type="submit" class="save">Login</button>
        </form>
    </section>
</main>